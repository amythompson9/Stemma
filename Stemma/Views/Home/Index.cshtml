<div id="leaf-landing-page">


    @{
        ViewBag.Title = "Stemma";
    }
    <div class="jumbotron">
        <h1>STEMMA</h1>
        <h2 class="lead">
            Capturing the moments, people, places, and everything in between that makes your life special
            is made easy with Stemma.
        </h2>
        <div class="cta">
            <a class="btn btn-success" href="~/Views/Account/Register.cshtml"> <i class="fa fa-envira" style="font-size:15px"></i>Get started</a>
        </div>
    </div>

    <div class="row" id="landing-page-text-boxes">
        <div class="col-md-3">

        @if (Model.AnythingElse == true)
            {
            <div class="col-md-4 resultBox">
                <div class="thumbnail">
                    <h4>We missed something that's important to you.</h4>
                    <ul>
                        <li class="fa fa-envira">
                            Make an entry for other activities, hobbies, interests or enthusiasms you'd like to remember.
                        </li>
                    </ul>
                    <div class="EntryButton">
                        <a href='@Url.Action("Create", "EventTables")'>
                            <input type='button' value='Make An Entry' class="btn btn-default" />
                        </a>
                    </div>
                </div>
            </div>
        }
        <div class="col-md-4 resultBox">
            <div class="thumbnail">
                <h4>
                    @Html.ActionLink("Update Your Hobbies & Interests", "Edit", new { id = Model.HobbyID })
                </h4>
                <h4>

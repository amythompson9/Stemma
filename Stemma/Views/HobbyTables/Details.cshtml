        @if (Model.ChildhoodVacation == true)
            {
            <div class="col-md-4 resultBox">
                <div class="thumbnail">
                    <h4>You took vacations when you were younger. Do you...</h4>
                    <ul>
                        <li class="fa fa-envira">

@model Stemma.Models.HobbyTable
<link href="~/Content/detailsCSS.css" rel="stylesheet" />
<link href="~/Content/LeafStyles.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "Suggestions for Hobby Stems";
}

<div class="detailsHeading">
    <h1>Hobbies & Interests</h1>
    <h3>Based on your answers, here are some ideas to add to your Stemma:</h3>
</div>
<div>
    <div class="rowDetails">
        @if (Model.PlaySports == true)
            {
            <div class="col-md-4 resultBox">
                <div class="thumbnail">
                    <h4>You play sports. Make a post for...</h4>
                    <ul>
                        <li class="fa fa-envira">
                            teams you played on in high school or college.
                        </li>
                        <li class="fa fa-envira">
                            important games you played or competitions you entered.
                        </li>
                        <li class="fa fa-envira">
                            something that you have recently accomplished.
                        </li>
                        <li class="fa fa-envira">
                            memorable days for teams you love.
                        </li>
                    </ul>
                    <div class="EntryButton">
                        <a href='@Url.Action("Create", "EventTables")'>
                            <input type='button' value='Make An Entry' class="btn btn-default" />
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (Model.InAShow == true)
            {
            <div class="col-md-4 resultBox">
                <div class="thumbnail">
